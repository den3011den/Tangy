@page "/learnBlazor/parentComponent"

<h3>ParentComponent</h3>
<CascadingValue Value="@MassageForGrandChild" Name="message">
    <CascadingValue Value="@LuckyNumber" Name="luckyNumber">
    <_ChildComponent @ref="childComp" OnButtonClick="ShowMessage" Title="Этот заголовок передан в качестве параметра из родительского компонента">
        <ChildContent>Рендеринг фрагмента из Родителя</ChildContent>
        <DangerChildContent>Рендеринг danger фрагмента из Родителя</DangerChildContent>
    </_ChildComponent>
    </CascadingValue>
</CascadingValue>
<p><b>@messageText</b></p>

<_AnotherChildComponent placeholder="Placeholder из Родителя"></_AnotherChildComponent>


<div class="row">
    <button class="btn btn-success" @onclick="()=>childComp.ToastrSuccess()" >Показать SweetAlert</button>
</div>

@*<_ChildComponent Title="Этот второй дочерний компонент">
    </_ChildComponent>*@

@code {
    private _ChildComponent childComp;

    public string MassageForGrandChild = "Это сообщение из твоего дедушки (ParentComponent)";
    public string LuckyNumber = "7";
    public string messageText = "";
    private void ShowMessage()
    {
        messageText = "Кнопка нажата из Дочернего компонента";
    }

}
